# ══════════════════════════════════════════════════════════════
# Laravel Environment Configuration Template
# ══════════════════════════════════════════════════════════════
# This template follows Laravel 12.x .env.example structure
# Placeholders are resolved by generate-env.sh during container startup
#
# Placeholder Types:
#   ${SECRET:VAR}              - Load from secrets file
#   ${CONFIG:path.to.value}    - Load from deployment.config.yml
#   ${DEFAULT:value}           - Use literal default value
#   ${GENERATE:type}           - Auto-generate (laravel-key, uuid, etc.)
#   ${FALLBACK:pattern}        - Smart fallback generation
#
# Fallback Chain (using |):
#   ${SECRET:VAR|DEFAULT:fallback}  - Try SECRET first, then DEFAULT
# ══════════════════════════════════════════════════════════════

# ══════════════════════════════════════════════════════════════
# Application Configuration
# ══════════════════════════════════════════════════════════════

APP_NAME="${CONFIG:laravel.core.name}"
APP_ENV="${ENV}"
APP_KEY="${SECRET:APP_KEY|GENERATE:laravel-key}"
APP_DEBUG="${CONFIG:laravel.core.debug|DEFAULT:false}"
APP_URL="${CONFIG:laravel.core.url}"
ASSET_URL="${CONFIG:laravel.core.url}"

APP_LOCALE="${CONFIG:laravel.core.locale|DEFAULT:en}"
APP_FALLBACK_LOCALE="${CONFIG:laravel.core.fallback_locale|DEFAULT:en}"
APP_FAKER_LOCALE="${CONFIG:laravel.core.faker_locale|DEFAULT:en_US}"
APP_TIMEZONE="${CONFIG:laravel.core.timezone|DEFAULT:UTC}"

APP_MAINTENANCE_DRIVER="${DEFAULT:file}"
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS="${DEFAULT:12}"

# ══════════════════════════════════════════════════════════════
# Logging Configuration
# ══════════════════════════════════════════════════════════════

LOG_CHANNEL="${DEFAULT:stack}"
LOG_STACK="${DEFAULT:single}"
LOG_DEPRECATIONS_CHANNEL="${DEFAULT:null}"
LOG_LEVEL="${CONFIG:laravel.logging.level|DEFAULT:debug}"

# ══════════════════════════════════════════════════════════════
# Database Configuration
# ══════════════════════════════════════════════════════════════

DB_CONNECTION="${SECRET:DB_CONNECTION|DEFAULT:mysql}"
DB_HOST="${SECRET:DB_HOST}"
DB_PORT="${SECRET:DB_PORT|DEFAULT:3306}"
DB_DATABASE="${SECRET:DB_DATABASE|FALLBACK:__PROJECT____ENV__}"
DB_USERNAME="${SECRET:DB_USERNAME}"
DB_PASSWORD="${SECRET:DB_PASSWORD}"

# ══════════════════════════════════════════════════════════════
# Session Configuration
# ══════════════════════════════════════════════════════════════

SESSION_DRIVER="${CONFIG:laravel.session.driver|DEFAULT:database}"
SESSION_LIFETIME="${CONFIG:laravel.session.lifetime|DEFAULT:120}"
SESSION_ENCRYPT="${CONFIG:laravel.session.encrypt|DEFAULT:false}"
SESSION_PATH="${CONFIG:laravel.session.path|DEFAULT:/}"
SESSION_DOMAIN="${CONFIG:laravel.session.domain|DEFAULT:null}"
SESSION_SECURE_COOKIE="${CONFIG:laravel.session.secure_cookie|DEFAULT:false}"
SESSION_SAME_SITE="${CONFIG:laravel.session.same_site|DEFAULT:lax}"

# ══════════════════════════════════════════════════════════════
# Cache, Queue, Broadcast, Filesystem
# ══════════════════════════════════════════════════════════════

BROADCAST_CONNECTION="${CONFIG:laravel.broadcast.connection|DEFAULT:log}"
FILESYSTEM_DISK="${DEFAULT:local}"
QUEUE_CONNECTION="${CONFIG:laravel.queue.connection|DEFAULT:database}"

CACHE_STORE="${CONFIG:laravel.cache.store|DEFAULT:database}"
CACHE_DRIVER="${CONFIG:laravel.cache.driver|DEFAULT:file}"
# CACHE_PREFIX=

# ══════════════════════════════════════════════════════════════
# Memcached Configuration
# ══════════════════════════════════════════════════════════════

MEMCACHED_HOST="${SECRET:MEMCACHED_HOST|DEFAULT:127.0.0.1}"

# ══════════════════════════════════════════════════════════════
# Redis Configuration
# ══════════════════════════════════════════════════════════════

REDIS_CLIENT="${SECRET:REDIS_CLIENT|DEFAULT:phpredis}"
REDIS_HOST="${SECRET:REDIS_HOST|DEFAULT:127.0.0.1}"
REDIS_PASSWORD="${SECRET:REDIS_PASSWORD|DEFAULT:null}"
REDIS_PORT="${SECRET:REDIS_PORT|DEFAULT:6379}"
REDIS_USER="${SECRET:REDIS_USER}"

# ══════════════════════════════════════════════════════════════
# Mail Configuration
# ══════════════════════════════════════════════════════════════

MAIL_MAILER="${SECRET:MAIL_MAILER|DEFAULT:log}"
MAIL_HOST="${SECRET:MAIL_HOST|DEFAULT:127.0.0.1}"
MAIL_PORT="${SECRET:MAIL_PORT|DEFAULT:2525}"
MAIL_USERNAME="${SECRET:MAIL_USERNAME|DEFAULT:}"
MAIL_PASSWORD="${SECRET:MAIL_PASSWORD|DEFAULT:}"
MAIL_ENCRYPTION="${SECRET:MAIL_ENCRYPTION|DEFAULT:}"
MAIL_FROM_ADDRESS="${SECRET:MAIL_FROM_ADDRESS|DEFAULT:hello@example.com}"
MAIL_FROM_NAME="${CONFIG:laravel.core.name|DEFAULT:Laravel}"

# ══════════════════════════════════════════════════════════════
# AWS Configuration
# ══════════════════════════════════════════════════════════════

AWS_ACCESS_KEY_ID="${SECRET:AWS_ACCESS_KEY_ID}"
AWS_SECRET_ACCESS_KEY="${SECRET:AWS_SECRET_ACCESS_KEY}"
AWS_DEFAULT_REGION="${SECRET:AWS_DEFAULT_REGION|DEFAULT:us-east-1}"
AWS_BUCKET="${SECRET:AWS_BUCKET}"
AWS_USE_PATH_STYLE_ENDPOINT="${SECRET:AWS_USE_PATH_STYLE_ENDPOINT|DEFAULT:false}"

# ══════════════════════════════════════════════════════════════
# CORS & Sanctum (API Authentication)
# ══════════════════════════════════════════════════════════════

CORS_ALLOWED_ORIGINS="${CONFIG:laravel.cors.allowed_origins}"
SANCTUM_STATEFUL_DOMAINS="${CONFIG:laravel.sanctum.stateful_domains}"

# ══════════════════════════════════════════════════════════════
# Third-Party API Keys & Integrations
# ══════════════════════════════════════════════════════════════

GOOGLE_CLIENT_ID="${SECRET:GOOGLE_CLIENT_ID}"
GOOGLE_CLIENT_SECRET="${SECRET:GOOGLE_CLIENT_SECRET}"

# ══════════════════════════════════════════════════════════════
# Infrastructure & Server Configuration
# ══════════════════════════════════════════════════════════════

# Traefik Swarm Network
TRAEFIK_SWARM_NETWORK="${SECRET:TRAEFIK_SWARM_NETWORK}"

# ══════════════════════════════════════════════════════════════
# Twilio (SMS/Phone Verification)
# ══════════════════════════════════════════════════════════════

TWILIO_SID="${SECRET:TWILIO_SID|DEFAULT:}"
TWILIO_AUTH_TOKEN="${SECRET:TWILIO_AUTH_TOKEN|DEFAULT:}"
TWILIO_VERIFY_SID="${SECRET:TWILIO_VERIFY_SID|DEFAULT:}"
TWILIO_SIMULATE="${SECRET:TWILIO_SIMULATE|DEFAULT:false}"
TWILIO_FROM="${SECRET:TWILIO_FROM|DEFAULT:}"

# ══════════════════════════════════════════════════════════════
# Vite (Frontend Build Tool)
# ══════════════════════════════════════════════════════════════

